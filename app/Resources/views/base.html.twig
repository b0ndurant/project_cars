{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <!-- maximum-scale=1.0 is now deprecated -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Martin aurelien">
    <meta name="description" content="cars est un vendeur d'occasion garantie">
    <meta name="keywords" content="vehicule d'occasion, utilitaire d'occasion, garantie, roubaix, occasion, rlnegoceauto">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->

    <title>RL Négoce Auto {% block title %}{% endblock %}</title>

    <!-- CSS -->
    <!-- Latest compiled and minified Bootstrap CSS files -->
    <link rel="stylesheet" href="{{ asset('asset/css/Bootstrap/bootstrap.min.css') }}">

    <!-- Personal CSS -->
    <link href="https://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('asset/css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('asset/css/Wow/animate.min.css') }}">
    {% block stylesheets %}
    {% endblock %}

    <!-- Favicons -->
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('asset/img/Logo.jpg') }}">
</head>
<body>
<header>
    {% block header %}
        <div class="container-fluid">
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="{{ path('homepage') }}">RL Négoce Auto</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/">Accueil</a></li>
                        <li><a href="{{ path('vehicules_index') }}">Nos vehicules</a></li>
                        <li><a href="{{ path('homepage') }}#garanty">Nos garanties</a></li>
                        <li><a href="{{ path('contact_index') }}">Nous Contacter</a></li>
                    </ul>
                </div>
            </nav>
        </div>

    {% endblock %}
</header>
{% block body %}{% endblock %}
<footer>
    {% block footer %}
        <div class="footer" id="footer">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-4 contact">
                        <h3> Contact </h3>
                        <p><i class="fas fa-envelope"></i> : rlnegoceauto@gmail.com </p>
                        <p><i class="fas fa-phone"></i> : 07.53.46.63.64 </p>
                    </div>
                    <div class="col-sm-4 times_open">
                        <h3> Horaires d'ouvertures </h3>
                        <p>Du lundi au samedi : 9h00 à 21h00</p>
                        <p>Le dimanche : 10h00 à 15h00</p>
                    </div>
                    <div class="col-sm-4 logo_footer">
                        <img src="{{ asset('asset/img/Logo.png') }}">
                    </div>
                </div>
                <div class="row copyrights">
                    <div class="col-sm-2">
                        <p><a href="{{ path('mentions_legals') }}">Mentions Legales</a></p>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="col-sm-2">
                            <p><a href="{{ path('article_index') }}">Espace administrateur</a></p>
                        </div>
                        <div class="col-sm-3 visit">
                            <!-- Start of CuterCounter Code -->
                            <span>Nombres de visites : </span><img src="http://www.cutercounter.com/hit.php?id=22365&nd=6&style=37" border="0" alt="hit counter">
                        </div>
                    {% else %}
                        <div class="col-sm-3 hidden">
                            <!-- Start of CuterCounter Code -->
                            <img src="http://www.cutercounter.com/hit.php?id=21825&nd=6&style=37" border="0" alt="free counter">
                            <!-- End of CuterCounter Code --></div>
                    {% endif %}
                </div>
                <!--/.row-->
            </div>
            <!--/.container-->
        </div>
    {% endblock %}
</footer>

<script src="{{ asset('asset/js/jquery/jquery-3.3.1.min.js') }}"></script>
<script src="{{ asset('asset/js/Bootstrap/bootstrap.min.js') }}"></script>
<script src="{{ asset('asset/js/Font-awesome/all.js') }}"></script>
<script src="{{ asset('asset/js/Wow/wow.min.js') }}"></script>
<script src="{{ asset('asset/js/main.js') }}"></script>


{% block javascripts %}
{% endblock %}

</body>
</html>