{% extends 'baseAdmin.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('asset/css/admin_Article.css') }}">
{% endblock %}

{% block body %}
    <section id="cars_index">
        <div class="container">
            <div class="row">
                <h1>Liste des Vehicules</h1>
            </div>
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-4">
                        <h4>
                            {{ article.title }}
                        </h4>
                        <p>
                            <img src="{{ asset('uploads/images/' ~ article.mainPicture) }}">
                        </p>
                        <p>
                            Prix : {{ article.price }} â‚¬
                        </p>
                        <a href="{{ path('article_edit', { 'id': article.id }) }}">Modifier</a>
                    </div>
                {% endfor %}
            </div>
            <div class="navigation">
                {{ knp_pagination_render(articles) }}
            </div>
            <div class="btn_create">
                <a href="{{ path('article_new') }}" class="btn btn-primary">Ajouter un nouveau vehicule</a>
            </div>
        </div>
    </section>
    {% for message in app.flashes('article_new') %}
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>{{ message }}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {% for message in app.flashes('article_edit') %}
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>{{ message }}</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}


{% endblock %}
